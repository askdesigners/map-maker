{
	"name": "text-adventure-map-maker",
	"version": "1.4.1",
	"description": "Simple boilerplate for building Vue app with Electron and Webpack.",
	"main": "dist/electron-app/main.js",
	"scripts": {
		"dev": "npx cross-env NODE_ENV=development yarn watch:vue-app",
		"start": "npx cross-env NODE_ENV=development yarn build:electron-app && yarn start:electron-app",
		"start:electron-app": "npx electron . --disable-gpu",
		"build": "npx cross-env NODE_ENV=production yarn build:electron-app && npx cross-env NODE_ENV=production yarn build:vue-app",
		"build:electron-app": "npx webpack --config webpack-electron-app.config.js --hide-modules --progress && npx ncp src/electron-app/icon.png dist/electron-app/icon.png",
		"build:vue-app": "npx webpack --config webpack-vue-app.config.js --hide-modules --progress",
		"watch:vue-app": "npx webpack-dev-server --config webpack-vue-app.config.js --hot",
		"pack": "yarn build && npx electron-builder --dir",
		"dist": "yarn build && npx electron-builder",
		"dist:all": "yarn build && npx electron-builder -wml --x64",
		"dist:w": "yarn build && npx electron-builder -w --x64",
		"dist:m": "yarn build && npx electron-builder -m --x64",
		"dist:l": "yarn build && npx electron-builder -l --x64",
		"postinstall": "npx electron-builder install-app-deps",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"build": {
		"appId": "app.id",
		"directories": {
			"output": "build/"
		}
	},
	"author": "Ryan Cole",
	"license": "MIT",
	"dependencies": {
		"@highlighted/vue-js-editor": "^0.6.1",
		"jsonfile": "^6.0.1",
		"konva": "^7.2.2",
		"prismjs": "^1.23.0",
		"vue": "^2.6.11",
		"vue-konva": "^2.1.6",
		"vuex": "^3.1.3"
	},
	"devDependencies": {
		"@babel/core": "^7.8.7",
		"@fullhuman/postcss-purgecss": "^2.1.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"cross-env": "^7.0.2",
		"css-loader": "^3.4.2",
		"devtron": "^1.4.0",
		"electron": "^8.1.1",
		"electron-builder": "^22.4.1",
		"eslint": "^6.8.0",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-vue": "^6.2.2",
		"file-loader": "^5.1.0",
		"html-webpack-plugin": "^3.2.0",
		"ncp": "^2.0.0",
		"node-sass": "^4.13.1",
		"postcss": "^7.0.27",
		"postcss-loader": "^3.0.0",
		"postcss-scss": "^2.0.0",
		"sass-loader": "^8.0.2",
		"svgo-loader": "^2.2.1",
		"vue-devtools": "^5.1.3",
		"vue-loader": "^15.9.0",
		"vue-style-loader": "^4.1.2",
		"vue-template-compiler": "^2.6.11",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	}
}
